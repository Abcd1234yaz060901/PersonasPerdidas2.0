@model PersonasPerdidas.Models.CrearPersonaPerdida

@{
    ViewBag.Title = "Create";
}

<CENTER>
    <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0" style="font-weight: bold;font-family:'Californian'">Crear nuevo reporte</h2>
    <hr />
    <h4>Reportes</h4>
    <hr />
</CENTER>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
