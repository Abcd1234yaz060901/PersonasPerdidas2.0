@model IEnumerable<PersonasPerdidas.Models.CrearPersonaPerdida>

@{
    ViewBag.Title = "Index";

}

@using (Html.BeginForm("PersonasEncontradas", "CrearPersonaPerdidas", new{ rol = ViewBag.Rol, Usuario = ViewBag.UsuarioActual, NombreUsuario = ViewBag.NombreUsuario, Correo = ViewBag.Correo , Fecha = ViewBag.fecha},FormMethod.Post))
{
    <br />
    <CENTER>
        <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0" style="font-weight: bold;font-family:'Californian'">Reporte personas Encontradas</h2>

        <hr />
        <h3>Busca reportes por fecha de encontrado</h3>


        <div class="form-inline">

            @Html.Label("Intervalo de fecha de reporte")

            @Html.TextBox("fecha", "", new { @class = "date-picker", @type = "date" })

            <button type="submit" class="btn btn-success ">
              Buscar
            </button>
        </div>
       
    </CENTER>

  


