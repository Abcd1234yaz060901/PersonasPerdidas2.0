<div class="container">

    <div id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">


        <div class="panel panel-default">
            <div class="panel-heading">
                <div class="panel-title text-center"><h3>Vecindario Seguro</h3></div>
            </div>

            <div class="panel-body">
                @using (Html.BeginForm("ValidarLogin", "Usuarios", new AjaxOptions
                {
                    HttpMethod = "Post",
                    OnFailure = "alert('@ViewBag.error')"
                }))
                {
                    @Html.ValidationSummary(true)
                    <fieldset>
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        @Html.TextBoxFor(m => m.Nombre, new { @name = "Usuario1", @class = "form-control" })
                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                        @Html.PasswordFor(m => m.Contrasena, new { @name = "Clave1", @class = "form-control" })
                        <input type="submit" value="Iniciar Seccion" />
                    </fieldset>
                }


            </div>
        </div>
    </div>
</div>
